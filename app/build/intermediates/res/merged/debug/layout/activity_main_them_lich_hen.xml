<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8sp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nentieude"
        android:gravity="center"
        android:padding="7dp"
        android:textColor="#fafafa"
        android:text="THÊM LỊCH HẸN" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bo_listview"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:src="@drawable/thoigianhen"/>
                <TextView
                    android:id="@+id/TextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"
                    android:text="Ngày Hẹn"
                    android:textColor="#CC0000"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_marginLeft="45sp"
                    android:id="@+id/edngayhen"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Ngày Hẹn"
                    android:inputType="date"
                    android:textColor="#003399" >
                </EditText>

                <Button
                    android:id="@+id/daypickerthemlichhen"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/edngayhen"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/hinhlich"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:padding="5sp"
                    android:src="@drawable/name"/>
                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"
                    android:text="Tên"
                    android:textColor="#cc0000"
                    android:textSize="19sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:layout_marginLeft="45sp"
                android:id="@+id/edten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lichhen"
                android:ems="10"
                android:hint="Tên" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:padding="5sp"
                    android:src="@drawable/note"/>
                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"
                    android:text="Chú Thích"
                    android:textColor="#cc0000"
                    android:textSize="19sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:layout_marginLeft="45sp"
                android:id="@+id/ednote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lichhen"
                android:ems="10"
                android:hint="Chú Thích" />



            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center" >

                <Button
                    android:id="@+id/savehen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/button"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Lưu"
                    android:textColor="#FFFFFF" />
            </TableRow>
        </LinearLayout>


    </ScrollView>
</RelativeLayout>
